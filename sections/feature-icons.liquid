{%- liquid
  assign section_bg = section.settings.section_background | default: '#fbf6ed'
  assign card_bg = section.settings.card_background | default: '#0f3d2e'
  assign accent = section.settings.accent_color | default: '#f3b72b'
  assign desktop_columns = section.settings.columns_desktop | default: '4'
-%}

<section
  id="feature-icons-{{ section.id }}"
  class="feature-icons section-{{ section.id }}"
  style="
    --feature-section-bg: {{ section_bg }};
    --feature-card-bg: {{ card_bg }};
    --feature-accent: {{ accent }};
  "
>
  {%- if section.settings.background_image != blank -%}
    <div
      class="feature-icons__bg"
      style="background-image: url({{ section.settings.background_image | image_url: width: 2000 }});"
      role="presentation"
    ></div>
  {%- endif -%}

  <div class="page-width feature-icons__inner">
    {%- if section.settings.heading != blank -%}
      <div class="title-wrapper-with-link feature-icons__header">
        <h2 class="title inline-richtext h1">{{ section.settings.heading }}</h2>
        {%- if section.settings.subheading != blank -%}
          <p class="feature-icons__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="feature-icons__grid feature-icons__grid--{{ desktop_columns }}">
      {%- for block in section.blocks -%}
        {%- liquid
          assign card_color = block.settings.custom_card_background | default: card_bg
          assign has_link = block.settings.link_label != blank and block.settings.link_url != blank
        -%}
        <article
          class="feature-icons__card"
          style="background-color: {{ card_color }};"
          {{ block.shopify_attributes }}
        >
          <div class="feature-icons__icon" aria-hidden="true">
            {%- if block.settings.icon != blank -%}
              {{ block.settings.icon | image_url: width: 200 | image_tag: loading: 'lazy', alt: block.settings.title | escape }}
            {%- else -%}
              <span class="feature-icons__icon-placeholder"></span>
            {%- endif -%}
          </div>
          {%- if block.settings.title != blank -%}
            <h3 class="feature-icons__title h3">{{ block.settings.title }}</h3>
          {%- endif -%}
          <span class="feature-icons__divider"></span>
          {%- if block.settings.text != blank -%}
            <p class="feature-icons__text">{{ block.settings.text }}</p>
          {%- endif -%}
          {%- if has_link -%}
            <a class="feature-icons__arrow" href="{{ block.settings.link_url }}">
              {{ block.settings.link_label }}
            </a>
          {%- endif -%}
        </article>
      {%- endfor -%}
    </div>
  </div>
</section>

