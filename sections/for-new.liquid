{% liquid
  assign section_bg = section.settings.section_background | default: '#fbf6ed'
  assign card_bg = section.settings.card_background | default: '#0f3d2e'
  assign accent = section.settings.accent_color | default: '#f3b72b'
  assign desktop_columns = section.settings.columns_desktop | default: '4'
%}

<section
  id="new-one-{{ section.id }}"
  class="new-one section-{{ section.id }}"
  style="
    --feature-section-bg: {{ section_bg }};
    --feature-card-bg: {{ card_bg }};
    --feature-accent: {{ accent }};
  "
>

  {%- if section.settings.background_image != blank -%}
    <div
      class="new-one__bg"
      style="background-image: url({{ section.settings.background_image | image_url: width: 2200 }});"
      role="presentation"
    ></div>
  {%- endif -%}

  <div class="page-width new-one__inner">

    {%- if section.settings.heading != blank -%}
      <div class="new-one__header">
        <h2 class="title h1 fade-up">{{ section.settings.heading }}</h2>

        {%- if section.settings.subheading != blank -%}
          <p class="new-one__subheading fade-up-delay">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="new-one__grid new-one__grid--{{ desktop_columns }}">
      {%- for block in section.blocks -%}
        {% liquid
          assign card_color = block.settings.custom_card_background | default: card_bg
        %}

        <article
          class="new-one__card fade-card"
          style="background-color: {{ card_color }};"
          {{ block.shopify_attributes }}
        >
          <div class="new-one__icon" aria-hidden="true">
            {% if block.settings.icon != blank %}
              {{ block.settings.icon 
                  | image_url: width: 260 
                  | image_tag: loading: 'lazy', class: 'icon-img', alt: block.settings.title | escape 
              }}
            {% else %}
              <span class="new-one__icon-placeholder"></span>
            {% endif %}
          </div>

          {% if block.settings.title != blank %}
            <h3 class="new-one__title h3">{{ block.settings.title }}</h3>
          {% endif %}

          <span class="new-one__divider"></span>

          {% if block.settings.text != blank %}
            <p class="new-one__text">{{ block.settings.text }}</p>
          {% endif %}

          {% if block.settings.link_label != blank and block.settings.link_url != blank %}
            <a class="new-one__link" href="{{ block.settings.link_url }}">
              {{ block.settings.link_label }}
            </a>
          {% endif %}
        </article>

      {%- endfor -%}
    </div>

  </div>
</section>


<style>
/* SECTION WRAPPER */
.new-one {
  position: relative;
  padding: 70px 0;
  background: var(--feature-section-bg);
  overflow: hidden;
}

/* BACKGROUND IMAGE */
.new-one__bg {
  position: absolute;
  inset: 0;
  background-size: cover;
  background-position: center;
  opacity: 0.25;
  z-index: 1;
}

/* CONTENT WRAPPER */
.new-one__inner {
  position: relative;
  z-index: 2;
}

/* HEADER */
.new-one__header {
  text-align: center;
  margin-bottom: 50px;
}

.new-one__subheading {
  margin-top: 10px;
  font-size: 18px;
  color: #555;
}

/* GRID */
.new-one__grid {
  display: grid;
  gap: 30px;
}

.new-one__grid--3 {
  grid-template-columns: repeat(3, 1fr);
}

.new-one__grid--4 {
  grid-template-columns: repeat(4, 1fr);
}

/* MOBILE RESPONSIVE */
@media (max-width: 990px) {
  .new-one__grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 600px) {
  .new-one__grid {
    grid-template-columns: 1fr;
  }
}

/* CARD */
.new-one__card {
  padding: 30px 25px;
  border-radius: 16px;
  text-align: center;
  transition: 0.35s ease;
  position: relative;
}

.new-one__card:hover {
  transform: translateY(-8px);
  box-shadow: 0 15px 30px rgba(0,0,0,0.12);
}

/* ICON */
.icon-img {
  max-width: 70px;
  height: auto;
  margin-bottom: 15px;
}

/* TITLE */
.new-one__title {
  margin: 15px 0 10px;
  color: white;
}

/* DIVIDER */
.new-one__divider {
  display: block;
  width: 40px;
  height: 3px;
  background: var(--feature-accent);
  margin: 12px auto 18px;
  border-radius: 3px;
}

/* TEXT */
.new-one__text {
  font-size: 15px;
  line-height: 1.6;
  color: white;
}

/* LINK */
.new-one__link {
  margin-top: 15px;
  display: inline-block;
  color: var(--feature-accent);
  font-weight: 600;
  text-decoration: underline;
}

/* ANIMATIONS */
.fade-up {
  opacity: 0;
  transform: translateY(20px);
  animation: fadeUp 0.6s forwards ease;
}

.fade-up-delay {
  opacity: 0;
  transform: translateY(20px);
  animation: fadeUp 0.6s 0.2s forwards ease;
}

.fade-card {
  opacity: 0;
  transform: translateY(30px);
  animation: fadeCard 0.7s forwards ease;
}

.fade-card:nth-child(2) { animation-delay: 0.1s; }
.fade-card:nth-child(3) { animation-delay: 0.2s; }
.fade-card:nth-child(4) { animation-delay: 0.3s; }
.fade-card:nth-child(5) { animation-delay: 0.4s; }
.fade-card:nth-child(6) { animation-delay: 0.5s; }

@keyframes fadeUp {
  to { opacity: 1; transform: translateY(0); }
}

@keyframes fadeCard {
  to { opacity: 1; transform: translateY(0); }
}
</style>


