        { "value": "3", "label": "3 cards" },
        { "value": "4", "label": "4 cards" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature card",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Clean Vegetables"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Ultrices sagittis orci a scelerisque purus semper eget duis at."
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Link label",
          "default": "Explore"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        },
        {
          "type": "color",
          "id": "custom_card_background",
          "label": "Custom card background"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "for new",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}
